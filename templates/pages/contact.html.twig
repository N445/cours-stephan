{% extends 'base.html.twig' %}

{% block title %}
    Contact - {{ parent() }}
{% endblock %}

{% block body %}
    {{ component('TopBannerComponent',{
        'title':'Contact',
        'page':'contact'
    }) }}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="text-center">Lieux des cours</h2>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> 22 Boulevard de Belleville,
                        75020 Paris
                    </li>
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> Depuis chez vous, en visio</li>
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> Au domicile d’un hôte de groupe
                    </li>
                </ul>
                {#                <ul> #}
                {#                    <li>Premier contact par téléphone ou par mail</li> #}
                {#                    <li>Entretien éventuel de 10 mn en Visio (parent, ou/et élève)</li> #}
                {#                    <li>Réservation des créneaux préétablis sur ce site</li> #}
                {#                    <li>Autres créneaux possibles à déterminer au téléphone</li> #}
                {#                    <li>Possibilité pour un parent d’assister à la première heure de cours en Visio.</li> #}
                {#                </ul> #}
            </div>
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                    </div>
                </div>
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                <button type="submit" class="btn btn-lg btn-primary w-100">
                    Envoyer
                </button>
                {{ form_end(form) }}
            </div>
        </div>


    </div>

    {% include 'parts/_comment-ca-marche.html.twig' %}


    {% include 'parts/_accompagnement-ado.html.twig' %}
{% endblock %}


{% block stylesheets %}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}