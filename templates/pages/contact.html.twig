{% extends 'base.html.twig' %}

{% block title %}
    Contact - {{ parent() }}
{% endblock %}

{% block body %}
    {{ component('TopBannerComponent',{
        'title':'Contact',
        'page':'contact'
    }) }}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> 22 Boulevard de Belleville,
                        75020 Paris
                    </li>
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> Depuis chez vous, en visio</li>
                    <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> Au domicile d’un hôte de cours
                    </li>
                </ul>
                {#                <ul> #}
                {#                    <li>Premier contact par téléphone ou par mail</li> #}
                {#                    <li>Entretien éventuel de 10 mn en Visio (parent, ou/et élève)</li> #}
                {#                    <li>Réservation des créneaux préétablis sur ce site</li> #}
                {#                    <li>Autres créneaux possibles à déterminer au téléphone</li> #}
                {#                    <li>Possibilité pour un parent d’assister à la première heure de cours en Visio.</li> #}
                {#                </ul> #}
            </div>
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                    </div>
                </div>
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                <button type="submit" class="btn btn-lg btn-primary w-100">
                    Envoyer
                </button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="row my-5">
            <div class="col-md-6">
                <img src="{{ asset('images/comment_ca_marche.png') }}" alt="" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Comment ça marche</h2>
                <ol>
                    <li>
                        <strong>Demande de renseignements</strong> <br>
                        Remplissage du formulaire sur le site
                        ou par téléphone
                    </li>
                    <li>
                        <strong>Entretien en visio (optionnel)</strong> <br>
                        Nous vous proposons un appel de 10 min en
                        visio OFFERT pour un premier contact.
                    </li>
                    <li>
                        <strong>Réservation des modules</strong> <br>
                        Choix des dates et des créneaux horaires.
                    </li>
                    <li>
                        <strong>La séance</strong> <br>
                        Première séance de cours
                        Possibilité pour les parents d’assister à la
                        première heure de cours en visio
                    </li>
                    <li>
                        <strong>Le debrief</strong> <br>
                        Echange possible avec le professeur après les
                        modules
                    </li>
                </ol>
            </div>
        </div>


    </div>


    <section id="info">
       <div class="container">
           <div class="row align-items-center">
               <div class="col-md-3">
                   <div class="text-center">
                       <img src="{{ asset('images/contact-info.png') }}" alt="" class="img-fluid">
                   </div>
               </div>
               <div class="col-md-9">
                   <div class="text-center">
                       <h4>Nous vous aidons à offrir à votre ado une aide précieuse !</h4>
                       <p>
                           Si vous parvenez à constituer un
                           groupe de 5 étudiants et si vous pouvez nous recevoir à votre domicile, le
                           module est alors gratuit pour l’un des vôtres
                           <br>
                           +
                           <br>
                           Possibilité également de bénéficier du CESU
                       </p>
                   </div>
               </div>
           </div>
       </div>
    </section>
{% endblock %}


{% block stylesheets %}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}