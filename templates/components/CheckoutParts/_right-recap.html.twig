<div class="card">
    <div class="card-body">
        <table class="table table-sm">
            <thead>
            <tr>
                <th>Module</th>
                <th>Date</th>
                <th>Prix unitaire</th>
                <th>Places</th>
                <th>Prix total</th>
            </tr>
            </thead>
            <tbody>
            {% for cartItem in this.cart.cartItems %}
                <tr class="{{ cartItem.isValid?'':'table-danger' }}">
                    <td>{{ cartItem.moduleName }}</td>
                    <td>{{ cartItem.moduleDateTime|date('d/m/Y H:i') }}</td>
                    <td class="text-end">{{ cartItem.price|price_humanize }}</td>
                    <td class="text-end">{{ cartItem.quantity }}</td>
                    <td class="text-end">
                        {{ cartItem.total|price_humanize }}
                        {% if cartItem.hasLocationPromo %}
                            <br>
                            <small class="text-muted">-{{ cartItem.price|price_humanize }}</small>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="100%" class="text-end">
                    {{ this.cart.total|price_humanize }}
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>

