<div {{ attributes.defaults(stimulus_controller('checkout_calendar')) }}>
    <div class="row">
        <div class="col-md-8">
            <div id="calendar"
                 data-start-at="{{ schedule.startAt|date('Y-m-d H:i:s') }}"
                 data-end-at="{{ schedule.endAt|date('Y-m-d H:i:s') }}"
                 data-events="{{ this.events|json_encode }}"
            >
            </div>
        </div>
        <div class="col-md-4">
            {% if cart %}
                <div class="card">
                    <div class="card-header">
                        <h6>Mes modules</h6>
                    </div>
                    <div class="card-body">
                        {% if cart.cartItems|length > 0 %}
                            <ul class="list-group">
                                {% for item in cart.cartItems %}
                                    <li class="list-group-item" aria-current="true">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">{{ item.module.name }}</h5>
                                            <small class="text-nowrap">{{ item.price|price_humanize }}</small>
                                        </div>

                                        {% set firstEvent = item.events|first %}
                                        {% set lastEvent = item.events|last %}
                                        <p>
                                            Du {{ firstEvent.start|date('d/m/Y') }}
                                            au {{ lastEvent.start|date('d/m/Y') }}
                                            <br>
                                            Entre {{ firstEvent.start|date('H:i') }} et {{ firstEvent.end|date('H:i') }}
                                        </p>
                                        <button class="text-danger btn btn-link" type="button" data-action="live#action"
                                                data-action-name="removeCartItem(cartItemId={{ item.id }})">
                                            Supprimer
                                        </button>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="alert alert-info" role="alert">
                                Pas encore de module choisis
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="" class="btn btn-primary">
                            Proc√©der au paiement
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
