{% extends 'base.html.twig' %}

{% block title %}Les modules - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Les modules</h1>
        <div class="row row-cols-4 g-4">
            {% for module in modules %}
                <div class="col">
                    <div class="card h-100 shadow">
                        <div class="card-header">
                            <h2 class="h6 mb-0">{{ module.name }}</h2>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                {% for subModule in module.subModules %}
                                    <li class="list-group-item">
                                        {{ subModule.name }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('APP_CHECKOUT',{'moduleId':module.id}) }}">
                                Payer
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
