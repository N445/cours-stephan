{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <div class="container">
     <div class="row">
         <div class="col-md-6">
             <div class="card">
                 <div class="card-body">
                     {{ form_start(form) }}
                     {{ form_row(form.name) }}
                     {{ form_row(form.address1) }}
                     {{ form_row(form.address2) }}
                     {{ form_row(form.address3) }}
                     {{ form_row(form.postCode) }}
                     {{ form_row(form.city) }}
                     <button type="submit" class="btn btn-primary">
                         Continuer
                     </button>
                     {{ form_end(form) }}
                 </div>
             </div>
         </div>
     </div>
    </div>
{% endblock %}
