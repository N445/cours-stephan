{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
    <div class="container">
        {{ dump(planning) }}
        <div id="calendar"
             data-start-at="{{ planning.startAt|date('Y-m-d H:i:s') }}"
             data-end-at="{{ planning.endAt|date('Y-m-d H:i:s') }}"
             data-events="{{ events|json_encode }}"
        ></div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('planning') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('planning') }}
{% endblock %}