    <section id="blog" data-aos="fade-up" data-aos-delay="0">
        <div class="container">
            <div class="blogs row row-cols-1 g-3">
                {% for blog in blogs %}
                    <div class="col">
                        {{ blogMacro.card(blog) }}
                    </div>
                {% endfor %}
            </div>
            <p class="text-end">
                <a href="{{ path('APP_BLOGS') }}"> Voir toutes les actualit√©s</a>
            </p>
        </div>
    </section>
{% endif %}
